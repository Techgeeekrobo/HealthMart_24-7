<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/home_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title/Heading -->
        <TextView
            android:id="@+id/title_medicine_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Medicines"
            android:textSize="24sp"
            android:textColor="#333"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="10dp" />

        <!-- RecyclerView for displaying medicines -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/medicineRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" />

        <!-- LinearLayout for Back and View Cart buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal">

            <!-- Back Button -->
            <Button
                android:id="@+id/backButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_marginEnd="16dp" />

            <!-- Button to view the cart -->
            <Button
                android:id="@+id/viewCartButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Cart"
                android:textColor="@color/black"
                android:padding="10dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
