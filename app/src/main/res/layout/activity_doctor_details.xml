<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    tools:context=".Doctor_details">

    <!-- Title/Heading with a custom font -->
<TextView
android:id="@+id/title_view"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="HealthMart"
android:textColor="@android:color/black"
android:textSize="32sp"
android:textStyle="bold"
android:fontFamily="sans-serif-medium"
android:layout_centerHorizontal="true"
android:layout_margin="16dp" />

    <!-- Subtitle for doctor list -->
<TextView
android:id="@+id/textviewDDtitle"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginTop="60dp"
android:layout_centerHorizontal="true"
android:text="Available Doctors"
android:textColor="@android:color/black"
android:textSize="22sp"
android:textStyle="italic"
android:fontFamily="sans-serif" />

    <!-- ListView for displaying doctor information with rounded corners and padding -->
<ListView
android:id="@+id/listViewDoctors"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="20dp"
android:padding="16dp"
android:divider="@android:color/transparent"
android:dividerHeight="15dp"
android:layout_below="@+id/textviewDDtitle"
android:layout_margin="16dp"
    android:background="@android:color/holo_blue_light"
android:layout_centerHorizontal="true"
android:scrollbars="none"/>

    <!-- Add a floating button for future actions like searching or filtering doctors -->

    </RelativeLayout>

